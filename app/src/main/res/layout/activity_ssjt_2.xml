<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <include layout="@layout/biaoti"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="绿龙达"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:id="@+id/txt_luxian"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/lv_yuan"
                android:text="首"
                android:gravity="center"
                android:textColor="#fff"
                android:textSize="20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_time1"
                android:textSize="20dp"
                android:text="06：23：21"
                android:layout_marginLeft="20dp"
                />


            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/hong_yuan"
                android:text="末"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:textColor="#fff"
                android:textSize="20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_time2"
                android:textSize="20dp"
                android:text="06：23：21"
                android:layout_marginLeft="20dp"
                />

        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000"
        android:layout_marginTop="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center|left"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全程"
            android:textSize="25dp"
            android:layout_marginLeft="300dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全程"
            android:textColor="#1DA4FF"
            android:textSize="25dp"
            android:id="@+id/txt_quancheng"
            android:layout_marginLeft="50dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全程"
            android:textSize="25dp"
            android:id="@+id/txt_piaojia"
            android:layout_marginLeft="60dp"
            />




    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="#F2F2F2"
        >

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="400dp"
            android:id="@+id/listview"
            android:divider="@null"
            />

    </LinearLayout>

</LinearLayout>