<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <include layout="@layout/biaoti"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="left|center"
        >
        <TextView
            android:layout_width="10dp"
            android:layout_height="40dp"
            android:background="#2196F3"
            android:layout_marginLeft="70dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="违章记录"
            android:textSize="30dp"
            android:layout_marginLeft="20dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/hongzuobiao"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学院路"
                android:textSize="25dp"
                android:layout_marginLeft="20dp"
                android:textColor="#03A9F4"
                android:id="@+id/txt_didian"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未处理"
                android:textSize="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginLeft="20dp"
                android:textColor="#fff"
                android:background="@drawable/lv_yuan"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_mes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="不按规定停车或车辆发生故障不立即将车移开，造成交通严重堵塞 。"
            android:layout_marginTop="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/img_zuo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back_heizuo"
                />
            <ImageView
                android:id="@+id/img_1"
                android:layout_marginLeft="50dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/weizhang2"
                />

            <ImageView
                android:id="@+id/img_2"
                android:layout_width="0dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="50dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/weizhang4"
                android:layout_marginRight="50dp"
                />

            <ImageView
                android:id="@+id/img_you"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back_heiyou"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="120dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="违章：0"
            android:textSize="25dp"
            android:id="@+id/txt_weizhang"
            android:layout_marginLeft="100dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="罚款：0"
            android:textSize="25dp"
            android:id="@+id/txt_fakuan"
            android:layout_marginLeft="70dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="扣分：0"
            android:textSize="25dp"
            android:id="@+id/txt_koufen"
            android:layout_marginLeft="70dp"
            />

    </LinearLayout>

</LinearLayout>