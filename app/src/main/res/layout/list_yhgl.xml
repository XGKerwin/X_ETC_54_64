<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <com.example.x_etc_54_64.util.MyScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/lin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_poto"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:src="@drawable/touxiang_1" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/txt_user"
                        android:gravity="center"
                        android:textSize="30dp"
                        android:textColor="#000"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="用户名:" />


                    <TextView
                        android:id="@+id/txt_name"
                        android:gravity="center"
                        android:textSize="30dp"
                        android:textColor="#000"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="姓名:" />


                    <TextView
                        android:id="@+id/txt_tel"
                        android:gravity="center"
                        android:textSize="30dp"
                        android:textColor="#000"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="电话:" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_guanliyuan"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:background="#FFEB3B"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="一般管理员"
                        android:textColor="#000"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/txt_xiangqing"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/bg_radius"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="查看详情"
                        android:textColor="#000"
                        android:textSize="20sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_menu"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_shoucang"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#1DBD28"
                    android:gravity="center"
                    android:text="收藏"
                    android:textColor="#000"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/txt_del"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#F0000B"
                    android:gravity="center"
                    android:text="删除"
                    android:textColor="#000"
                    android:textSize="25sp" />

            </LinearLayout>

        </LinearLayout>

    </com.example.x_etc_54_64.util.MyScrollView>

</LinearLayout>


